@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<p>
    <a asp-action="CreateUser">Create user</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model)
{
    <tr>
        <td>
            @user.Email
        </td>
        <td>
            <a asp-action="AssignRole" asp-route-userId="@user.Id">Assign Role</a>
        </td>
    </tr>
}
    </tbody>
</table>

